CREATE TABLE `students2`(
    `id` INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    `name` VARCHAR(20) NOT NULL,
    `nickname` VARCHAR(20) NOT NULL,
    `sex` CHAR(1) NULL,
    `in time` DATETIME NULL
)DEFAULT CHARSET 'UTF8';

